@model ProductSystem.Models.ProductModel

@{
	ViewData["Title"] = "Create Product";
	var errorMessage = TempData["errorMessage"]?.ToString();
	var successMessage = TempData["successMessage"]?.ToString();
}
<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
	<div class="alert alert-danger">
		<strong> Error..</strong>@errorMessage
		<button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>

	</div>
}
<a asp-action="Create" asp-controller="Category" class="btn btn-primary mb-3">Create Category</a>

<form asp-action="Create" method="post">
	
@* <div class="mb-3"> *@
@* 	<label class="form-label">Id</label> *@
@* 	<input type="text" class="form-control" asp-for="Id"/> *@
@* 	<span asp-validation-for="Id" class="text-danger"></span> *@
@* </div> *@
	<div class="mb-3">
		<label class="form-label">Product Name</label>
		<input type="text" class="form-control" asp-for="ProductName" />
		<span asp-validation-for="ProductName" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label class="form-label">Product Description</label>
		<input type="text" class="form-control" asp-for="ProductDescription" />
		<span asp-validation-for="ProductDescription" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="CategoryId" class="form-label"></label>
		<select asp-for="CategoryId" class="form-control" asp-items="@(ViewData["CategoryId"] as SelectList)">
			<option value="">Select Category</option>
		</select>
		<span asp-validation-for="CategoryId" class="text-danger"></span>
	</div>


	<div class="d-grid">
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>



</form>








