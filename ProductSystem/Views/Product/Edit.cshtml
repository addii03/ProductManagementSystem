@model ProductSystem.Models.ProductViewModel

@{
	ViewData["Title"] = "Edit Product";
	var errorMessage = TempData["errorMessage"]?.ToString();
}
<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
	<div class="alert alert-danger">
		<strong> Success..</strong>@errorMessage
		<button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>

	</div>
}
<form action="Edit"method="post"> 
<div class="mb-3">
		<label class="form-label">ProductId</label>
		<input type="text" class="form-control" asp-for="ProductId" readonly />
</div>
<div class="mb-3"></div>
<label class="form-label"> Product Name</label>
<input  type="text" class="form-control"asp-for="ProductName"/>
<span asp-validation-for="ProductName" class="text-danger"></span>
	<div class="mb-3"></div>
	<label class="form-label"> Product Description</label>
	<input type="text" class="form-control" asp-for="ProductDescription" />
	<span asp-validation-for="ProductDescription" class="text-danger"></span>
	<div class="d-grid">
		<button type="submit" class="btn btn-success">Update</button>
	</div>
</form>